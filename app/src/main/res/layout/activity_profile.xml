<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/wave">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iprofile"
        android:layout_width="144dp"
        android:layout_height="118dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="579dp"
        android:src="@drawable/elliot"
        android:onClick="image_profile"
        />

    <TextView
        android:id="@+id/ifirstName"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="655dp"
        android:text="Elliot "
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/iLastName"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="655dp"
        android:text="Robot"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_baseline_sell_24"
        android:text="Seller "
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/iphone"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="483dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:text="06282319465"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"

        />

    <TextView
        android:id="@+id/imail"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="437dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:text="elliiot@mail.com "
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="398dp"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:text="Share"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/edit"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="142dp"
        android:backgroundTint="@color/c2"
        android:text="edit" />

</RelativeLayout>